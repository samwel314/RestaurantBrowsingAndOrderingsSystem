@model SystemOverviewVM
<div class="card border-primary  border-4 mt-5 mx-auto" style="max-width: 70rem;">
    <div class="card-header border-primary text-bg-dark  border-3"><h1 class="fw-bold  text-center">System Overview <i class="bi bi-database-fill-check"></i></h1></div>
    <div class="card-body ">
        <h2 class="card-title fw-bold  text-warning">We Have (4) Of Users <i class="bi bi-person-vcard"></i></h2>
        <div class="row" >
           <div class="col-2">
                <p class="card-text fw-bold fs-4">@Model.AdminCount Admins <i class="bi bi-person-fill-gear"></i> </p>
                <p class="card-text fw-bold fs-4"> @Model.CustomersCount Customers  <i class="bi bi-person-fill"></i> </p>
           </div>
            <div class="col-8 mt-4">
                <p class="card-text fw-bold fs-4"> <a href="#" class="btn btn-outline-success fw-bold fs-5">Create New One  <i class="bi bi-cloud-plus"></i> </a></p>
            </div>
       </div>
        <div class="row mt-4">
            <div class="col-3">
                <p class="card-text fw-bold fs-4">  @Model.RestaurantCount Restaurants <i class="bi bi-building-fill-check"></i></p>
            </div>
            <div class="col-9 ">
                <p class="card-text fw-bold fs-4"> <a asp-action="UpdateCreate" class="btn btn-outline-primary fw-bold fs-5">Create New One  <i class="bi bi-house-add-fill"></i> </a></p>
            </div>
        </div>
        
    </div>
</div>

