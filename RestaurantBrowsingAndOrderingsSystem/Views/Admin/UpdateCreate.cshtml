@model Restaurant

@{
    var Titel = Model.Id == 0 ? "Add - New Restaurant" : $"Update - {Model.Name} Restaurant";
    ViewData["Title"] = Titel ; 
}

<div class="card  border-primary  border-4 mt-4 mx-auto" style="max-width: 700px;">
    <div class="card-header border-primary text-bg-dark  border-3">
        <h3 class="card-title text-center text-white mt-2 fw-bold">@Titel</h3>
    </div>
    <div class="card-body">
        <div class="fw-bold text-warning" asp-validation-summary="All"></div>
        <form  method="post">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label class="text-white fw-bold" asp-for="Name">Restaurant Name </label>

                <input asp-for="Name" class="form-control" autocomplete="tel" aria-required="true" placeholder="Name" />
                <span asp-validation-for="Name" class="fw-bold text-warning"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="text-white fw-bold" asp-for="Location">Restaurant Location</label>

                        <input asp-for="Location" class="form-control" autocomplete="name" aria-required="true" placeholder="Location" />
                        <span asp-validation-for="Location" class="fw-bold text-warning"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="text-white fw-bold" asp-for="Description">Restaurant Description</label>

                        <input asp-for="Description" class="form-control" autocomplete="tel" aria-required="true" placeholder="Description" />
                        <span asp-validation-for="Description" class="fw-bold text-warning"></span>
                    </div>
                </div>
            </div>


            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-primary btn-lg w-50 m-10">
                    @Titel 
                </button>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Restaurants" class="btn btn-outline-warning btn-lg w-25">Back</a>
            </div>




       
        </form>
    </div>
</div>
    
        




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}