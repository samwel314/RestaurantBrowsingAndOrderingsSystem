<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantBrowsingAndOrderingsSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand fs-5 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">RestaurantOrderingSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 fs-5 fw-bold">
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i> Home</a>
                        </li>
                     

                        @if (User.Claims.Any() && User.Claims.First(x => x.Type == StaticData.UserTypeClaim).Value == StaticData.AdminClaim)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Manage System  <i class="bi bi-gear-fill"></i>
                                </a>
                                <!--//01005415303-->
                                <ul class="dropdown-menu fs-5 fw-bold">
                                    <li class="nav-item fw-bold">
                                        <a class="dropdown-item text-white" asp-controller="Admin" asp-action="Index">System Data <i class="bi bi-database-lock"></i></a>
                                    </li>
                                    <li class="nav-item fw-bold">
                                        <a class="dropdown-item text-white" asp-controller="Admin" asp-action="Users">Mange Users <i class="bi bi-person-fill-gear"></i></a>
                                    </li>
                                    <li class="nav-item fw-bold">
                                        <a class="dropdown-item text-white" asp-controller="Admin" asp-action="Restaurants">Mange Restaurants <i class="bi bi-bank2"></i> </a>
                                    </li>
                                </ul>
                            </li>
                        }
                  
                    </ul>
                 
                    <partial name="_LoginPartial" />

                </div>
         
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/sweetalert/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
